
@{
    ViewBag.Title = "Task Detail";
    <style>
        .bg_blur {
            background-image: url('http://data2.whicdn.com/images/139218968/large.jpg');
            height: 300px;
            background-color: gray;
            background-size: cover;
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-head-line">Task Detail </h1>
    </div>
</div>
<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
    <div class="row panel">
        <div class="col-md-4 bg_blur ">
            <a href="#" class="follow_btn hidden-xs">Follow</a>
        </div>
        <div class="col-md-8  col-xs-12">

            <div class="header">
                <h1>Lorem Ipsum</h1>
                <h4>Duration: @DateTime.Now.ToLongDateString() to @DateTime.Now.ToLongDateString()</h4>
                <span>
                    Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
                    "There is no one who loves pain itself, who seeks after it and wants to have it, simply because it is pain..."
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!--    Striped Rows Table  -->
            <div class="panel panel-default">
                <div class="panel-heading">
                  Sub Tasks
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Priority</th>
                                    <th>Deadline</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>@@mdo</td>
                                    <td>@@mdo</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>@@mdo</td>
                                    <td>@@fat</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Larry</td>
                                    <td>the Bird</td>
                                    <td>@@mdo</td>
                                    <td>@@twitter</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--  End  Striped Rows Table  -->
        </div>
    </div>
    <div class="row nav">
        <div class="col-md-4"></div>
        <div class="col-md-8 col-xs-12" style="margin: 0px;padding: 0px;">
            <a href="#" class="btn btn-danger">Some Action</a>
            <a href="#" class="btn btn-danger">Some Action</a>
            <a href="#" class="btn btn-danger">Some Action</a>
        </div>
    </div>
</div>